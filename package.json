{
  "version": "0.0.5",
  "name": "@torian12321/typescript-config",
  "description": "Reusable TypeScript configurations for different project types",
  "author": "torian12321",
  "type": "module",
  "exports": {
    "./base": "./src/base.json",
    "./vite": "./src/vite.json",
    "./vite-react": "./src/vite-react.json"
  },
  "scripts": {
    "validate": "node scripts/validate.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run validate && npm run format:check"
  },
  "keywords": [
    "typescript",
    "tsconfig",
    "configuration",
    "vite",
    "react"
  ],
  "prettier": "@torian12321/prettier-config",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/torian12321/typescript-config.git"
  },
  "devDependencies": {
    "@torian12321/prettier-config": "^0.0.2",
    "prettier": "^3.6.2"
  }
}
